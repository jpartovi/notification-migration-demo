{
  "name": "notification-migration-demo",
  "version": "1.0.0",
  "description": "A demo notification service for demonstrating migration from on-premise to AWS Lambda",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t notification-service .",
    "docker:run": "docker run -p 3000:3000 notification-service",
    "setup:dev": "mkdir -p data logs && npm install",
    "clean": "rm -rf node_modules data/*.db logs/*.log"
  },
  "keywords": [
    "notifications",
    "microservice",
    "aws-lambda",
    "migration",
    "demo"
  ],
  "author": "Demo Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "sqlite3": "^5.1.6",
    "nodemailer": "^6.9.7",
    "axios": "^1.6.2",
    "firebase-admin": "^11.11.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/notification-migration-demo.git"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ]
  }
}
